<h1>Itens</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Categoria</th>    
	<th>Descricao</th>
	<th>Preco</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @itens.each do |item| %>
  <tr>
    <td><%= item.nome %></td>
    <td><%= item.categoria_id %></td>    
	<td><%= item.descricao %></td>
	<td><%= item.preco %></td>
    <td><%= link_to 'Detalhes', item %></td>
    <td><%= link_to 'Editar', edit_item_path(item) %></td>
    <td><%= link_to 'Remover', item, :confirm => 'Deseja remover este item?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @itens %>

<br />

<%= link_to 'Novo', new_item_path %>

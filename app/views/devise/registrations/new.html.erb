<%= content_for :css do%>
	<%= stylesheet_link_tag "login" %>
<% end %>

<%= content_for :js do%>
	<script type="text/javascript">
		$(document).ready(function(){
			$("#user_email").select();
			
			$("form").submit(function(){
				$("#user_email").val(jQuery.trim($("#user_email").val()));
			});
						
			$("input").val('');					
		});
	</script>
	<!--[if IE]>
	<script>
		$(document).ready(function(){
			$("#user_email").focus();
		});
	</script>
	<![endif]-->
<% end %>

<%= content_for :login do %>
	<div id="additional"></div>
	<div id="formWrapper">
		<div id="formCasing">
			<h1>Novo Usuário</h1>
			<div id="loginForm">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					<%= content_tag(:p, flash[:alert], :class => "error") if flash[:alert] %>
					<%= content_tag(:p, flash[:notice], :class => "success") if flash[:notice] %>					
					
					<dt class="alteracaosenha"><%= f.label :email, 'E-mail' %></dt>
					<dd><%= f.text_field :email, :class => 'input'%></dd>

					<dt class="alteracaosenha"><%= f.label :password, 'Senha' %></dt>
					<dd><%= f.password_field :password, :class => 'input' %></dd>	

					<dt class="alteracaosenha"><%= f.label :password_confirmation, 'Confirmação' %></dt>
					<dd><%= f.password_field :password_confirmation, :class => 'input' %></dd>
					
					<dd class="alteracaosenha"><%= f.submit "Registrar", :src => '/images/botao/botao_registrar.png', :type => 'image' %></dd>				
				<% end %>
			</div>
		</div>
		<div id="formFooter"></div>
	</div>
<% end %>